<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Comunidad Conectada</title>

    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">

    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Participantes" asp-action="Index">
                <i class="bi bi-people-fill me-2"></i>Comunidad Conectada
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a asp-controller="Participantes" asp-action="Index" class="nav-link">
                            <i class="bi bi-table me-1"></i> Lista
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Participantes" asp-action="Create" class="nav-link">
                            <i class="bi bi-person-plus me-1"></i> Nuevo
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

   
    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light text-center py-3 mt-4">
        <small>&copy; @DateTime.Now.Year - Comunidad Conectada</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
