@model IEnumerable<ComunidadConectada.Models.Participante>
@{
    ViewData["Title"] = "Registro Comunitario - Lista";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 text-primary fw-bold mb-0">
        <i class="bi bi-people-fill me-2"></i> Registro Comunitario
    </h1>
    <a asp-action="Create" class="btn btn-success shadow-sm">
        <i class="bi bi-person-plus me-1"></i> Nuevo participante
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info d-flex align-items-center" role="alert">
        <i class="bi bi-info-circle-fill me-2"></i>
        No hay participantes registrados.
    </div>
}
else
{
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-dark text-white fw-semibold">
            <i class="bi bi-table me-1"></i> Lista de participantes
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered align-middle mb-0">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Identificación</th>
                            <th>Nombre</th>
                            <th>Apellidos</th>
                            <th>Teléfono</th>
                            <th>Email</th>
                            <th>Género</th>
                            <th>Edad</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@p.Identificacion</td>
                                <td>@p.Nombre</td>
                                <td>@p.Apellidos</td>
                                <td>@p.Telefono</td>
                                <td>
                                    <a href="mailto:@p.Correo" class="text-decoration-none">
                                        <i class="bi bi-envelope-at me-1 text-secondary"></i>@p.Correo
                                    </a>
                                </td>
                                <td>@p.Genero</td>
                                <td class="text-end fw-bold">@p.Edad</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted small text-end px-3 py-2">
            Total de registros: <strong>@Model.Count()</strong>
        </div>
    </div>
}
